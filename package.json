{
  "name": "srcp-enterprise",
  "version": "6.0.0",
  "description": "SRCP Enterprise - Production-Grade Decentralized Platform",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec node --experimental-specifier-resolution=node src/server.js",
    "build": "tsc && npm run build:wasm",
    "build:wasm": "asc contracts/*.ts -o dist/contracts/",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "security-scan": "npm audit && snyk test",
    "docker:build": "docker build -t srcp-enterprise:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "generate-types": "tsc --declaration --emitDeclarationOnly",
    "benchmark": "node --experimental-specifier-resolution=node benchmarks/run-all.js",
    "docs": "typedoc --out docs src"
  },
  "dependencies": {
    "@helia/unixfs": "^3.0.0",
    "@libp2p/bootstrap": "^10.0.0",
    "@libp2p/kad-dht": "^12.0.0",
    "@libp2p/mplex": "^10.0.0",
    "@libp2p/noise": "^15.0.0",
    "@libp2p/websockets": "^8.0.0",
    "@libp2p/webrtc": "^4.0.0",
    "assemblyscript": "^0.27.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "dompurify": "^3.0.8",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "helia": "^4.0.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "libp2p": "^1.2.0",
    "multiformats": "^13.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "snyk": "^1.1279.0",
    "supertest": "^6.3.4",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {}
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/srcp/srcp-enterprise.git"
  },
  "keywords": [
    "blockchain",
    "decentralized",
    "p2p",
    "ipfs",
    "webassembly",
    "consensus",
    "raft",
    "distributed-systems",
    "enterprise"
  ],
  "author": "SRCP Enterprise Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/srcp/srcp-enterprise/issues"
  },
  "homepage": "https://github.com/srcp/srcp-enterprise#readme"
}
